<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/color_app_bg</item>
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>

        <item name="popupMenuStyle">@style/ThemeOverlay.ListPopupWindow</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearanceComponent.MediumCornerSize</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearanceComponent.MediumCornerSize</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearanceComponent.SmallCornerSize</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">?attr/isLightTheme</item>
        <item name="android:navigationBarColor">@color/color_app_bg</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="27">@color/color_app_bg</item>
        <item name="android:statusBarColor">@color/color_app_bg</item>
    </style>

    <style name="ThemeOverlay.ListPopupWindow" parent="Widget.MaterialComponents.PopupMenu.ListPopupWindow">
        <item name="android:popupBackground">@drawable/popup_menu_bg</item>
    </style>

    <style name="ShapeAppearanceComponent.MediumCornerSize" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>
    <style name="ShapeAppearanceComponent.SmallCornerSize" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.OrangeAccent">
        <item name="colorPrimary">@color/color_orange_accent</item>
        <item name="colorPrimaryDark">@color/color_orange_accent</item>
        <item name="colorAccent">@color/color_orange_accent</item>
    </style>

    <style name="AppTheme.DayNightAccent">
        <item name="colorPrimary">@color/color_daynight_black</item>
        <item name="colorPrimaryDark">@color/color_daynight_black</item>
        <item name="colorAccent">@color/color_text_secondary</item>
    </style>

    <style name="ThemeOverlay.AppBarLayout" parent="">
        <item name="android:textColorPrimary">@color/color_text_primary</item>
        <item name="colorControlNormal">@color/color_text_primary</item>
    </style>

    <style name="ThemeOverlay.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorAccent">@color/color_purple_accent</item>
        <item name="colorOnSurface">@color/color_app_bg</item>
        <item name="colorSurface">@color/color_app_bg</item>
        <item name="materialAlertDialogBodyTextStyle">@style/ThemeOverlay.BodyMaterialAlertDialog</item>
        <item name="materialAlertDialogTitleTextStyle">@style/ThemeOverlay.TitleMaterialAlertDialog</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceComponent.MediumCornerSize</item>
    </style>
    <style name="ThemeOverlay.BodyMaterialAlertDialog" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/color_text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ThemeOverlay.TitleMaterialAlertDialog" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="WindowAnimationFadeInOut">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
</resources>
