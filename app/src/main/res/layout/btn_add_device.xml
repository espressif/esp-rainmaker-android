<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_dev_manually"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingVertical="14dp"
        android:paddingHorizontal="24dp"
        android:backgroundTint="@color/color_btn_bg"
        android:text="@string/btn_no_qr_code"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textAllCaps="false"
        android:textSize="18dp" />

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progress_indicator"
        style="?android:attr/progressBarStyle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="24dp"
        android:layout_alignRight="@id/btn_add_dev_manually"
        android:elevation="8dp"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/color_purple_accent"
        android:visibility="gone"/>
</RelativeLayout>
