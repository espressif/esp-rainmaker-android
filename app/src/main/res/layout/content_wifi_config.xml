<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_wifi_config">

    <TextView
        android:id="@+id/setup_instructions_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="25dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/setup_instructions"
        android:textAlignment="center"
        android:textColor="@color/color_text_secondary"
        android:textSize="18sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ssid_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setup_instructions_view"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        app:errorIconDrawable="@drawable/ic_fluent_error_circle"
        app:errorIconTint="@color/color_text_error"
        app:errorTextColor="@color/color_text_error"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_ssid_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edit_text"
                android:hint="@string/hint_ssid"
                android:inputType="text"
                android:maxLines="1"
                android:importantForAutofill="no"
                android:paddingStart="16dp"
                android:paddingTop="18dp"
                android:paddingEnd="16dp"
                android:paddingBottom="18dp"
                android:textColor="@color/color_text_primary"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ssid_input_layout"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:errorIconDrawable="@drawable/ic_fluent_error_circle"
        app:errorIconTint="@color/color_text_error"
        app:errorTextColor="@color/color_text_error"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:passwordToggleDrawable="@drawable/ic_fluent_eye_selector"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/color_purple_accent_l">

        <EditText
            android:id="@+id/et_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:hint="@string/password_hint_text"
            android:inputType="textPassword"
            android:paddingStart="@dimen/margin_16"
            android:paddingEnd="@dimen/margin_16"
            android:paddingTop="@dimen/margin_18"
            android:paddingBottom="@dimen/margin_18"
            android:textColor="@color/color_text_primary"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <include
        android:id="@+id/btn_next"
        layout="@layout/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_32" />

</RelativeLayout>
